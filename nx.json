{
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": ["test", "test:base", "test:fast", "test:slow"]
      }
    }
  },
  "targetDefaults": {
    "test": {
      "dependsOn": ["^test"]
    },
    "test:base": {
      "dependsOn": ["^test:base"]
    },
    "test:fast": {
      "dependsOn": ["^test:fast"]
    },
    "test:slow": {
      "dependsOn": ["^test:slow"]
    }
  }
}
